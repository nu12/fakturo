= form_for @statement do |f|
  - if @statement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@statement.errors.count, "error")} prohibited this statement from being saved:"
      %ul
        - @statement.errors.full_messages.each do |message|
          %li= message

  .field.mb-3
    = f.label :source_id, {class: "form-label"}
    = f.select :source_id, @sources.map { |s| [s.name, s.id] }, { prompt: "Select a source" }, { class: "form-control" }

  .field.mb-3.d-flex
    .w-50.pe-2
      = f.label :year, {class: "form-label"}
      = f.select :year, Array.new(10){ |i| i }.map { |s| [2021 + s, 2021 + s] }, { prompt: "Select a year" }, { class: "form-control" }

    .w-50.ps-2
      = f.label :month, {class: "form-label"}
      = f.select :month, Array.new(12){ |i| i }.map { |s| [ "%02d" % (s + 1), s + 1] }, { prompt: "Select a month" }, { class: "form-control" }

  .actions.mb-3
    = f.submit 'Save', class: "form-control btn btn-fakturo btn-fakturo-action"
