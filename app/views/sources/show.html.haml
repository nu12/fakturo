%h1
  Source details

.container.w-50
  %table.table
    %thead
      %tr
        %th Info
        %th Value
    %tbody
      %tr
        %td Name
        %td= @source.name
      %tr
        %td # of expenses
        %td= "#{@source.expenses.valid.count}/#{@source.expenses.count}"
      %tr
        %td{colspan: "2"}
          = link_to 'Edit this source', edit_source_path(@source), class: "btn btn-light form-control"
      %tr
        %td{colspan: "2"}
          %button.btn.btn-danger.form-control{:type => "button", "data-bs-toggle" => "modal", "data-bs-target" => "#deleteModal"}
            Delete this source
  
= render partial: "layouts/delete_modal", locals: {element: "source", link: @source}

- if @source.expenses.count > 0
  %hr
  = render partial: "expenses/table", locals: {expenses: @paginated_expenses, show: %i[ statement category subcategory ]}
