= link_to 'New Expense', new_expense_path, {class: "btn btn-fakturo btn-fakturo-action float-end"}

%h1 Expenses

.digg_pagination.d-flex.justify-content-center.mb-3
  = will_paginate @expenses, :container => false

%table.table.table-sm.table-striped
  %thead
    %tr
      %th Date
      %th Description
      %th Value
      %th Comment
      %th Ignore
      %th Document
      %th Source
      %th Category
      %th Sub-category
      %th

  %tbody
    - @expenses.each do |expense|
      %tr
        %td= expense.date.strftime("%Y-%m-%d")
        %td= expense.description
        %td= format("%.2f", expense.value)
        %td= expense.comment
        %td= expense.ignore
        %td= expense.document.name
        %td= expense.document.source.name
        %td= expense.subcategory.category.name
        %td= expense.subcategory.name
        %td= link_to 'Show details', expense_page_path(@page, expense)

.digg_pagination.d-flex.justify-content-center.mb-3
  = will_paginate @expenses, :container => false