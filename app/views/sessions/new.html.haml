.container.w-50
  .w-100.text-center
    %h2 Sign in
    = image_tag("logo.png", alt: "Fakturo", width: "60", height: "60")
  = form_with url: session_path do |f|
    .field.mb-3
      = f.label :username, {class: "form-label"}
      = f.text_field :username, autofocus: true, autocomplete: "email", class: "form-control"
    
    .field.mb-3
      = f.label :password, {class: "form-label"}
      = f.password_field :password, autocomplete: "current-password", class: "form-control"

    .actions.mb-3
      = f.submit "Sign in", class: "form-control btn btn-fakturo btn-fakturo-action"

  = link_to "Sign up", new_registration_path