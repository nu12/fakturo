.container.w-50
  .w-100.text-center
    %h2 Sign up
    = image_tag("logo.png", alt: "Fakturo", width: "60", height: "60")

    %div.text-start.mt-3.alert.alert-info{:role => "alert"}
      Privacy tip: avoid using personnal identifiable information (such as complete name, email address, date of birth, etc) when choosing the username. The system is designed to work without personnal identification.
      %hr
      See more at 
      = link_to "Data & Privacy policy", policy_path

  = form_with url: registration_path, method: :post do |f|
    - if @user.errors.any?
      #error_explanation
        %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
        %ul
          - @user.errors.full_messages.each do |message|
            %li= message
    .field.mb-3
      = f.label :username, {class: "form-label"}
      = f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control"

    .field.mb-3
      = f.label :password, {class: "form-label"}
      - if @minimum_password_length
        %em
          (
          = @minimum_password_length 
          characters minimum)
      
      = f.password_field :password, autocomplete: "new-password", class: "form-control"

    .field.mb-3
      = f.label :password_confirmation, {class: "form-label"}
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"

    .actions.mb-3
      = f.submit "Sign up", class: "form-control btn btn-fakturo btn-fakturo-action"
    
  = link_to "Sign in", new_session_path 
    