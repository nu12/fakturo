%h1 Dashboards

.row.row-cols-1.row-cols-md-4.g-4
  %div.w-100
    %h2 Doughnuts
  
  .col.d-flex.align-items-stretch
    .card.w-100
      = image_tag("echarts_pie.jpeg", alt: "Pie Chart", width: "100%")
