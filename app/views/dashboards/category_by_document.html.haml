%h1 Category by document

%p Select the document

= form_with url: "/dashboards/category_by_document", method: :get do |form|
  .field.mb-3
    = form.select :document_id, @documents.map { |d| ["#{d.name}, #{d.source.name} (#{d.year}, #{d.month})", d.id] }, {selected: params[:document_id], prompt: "Select a document" },{ class: "form-control" }
  
  .actions.mb-3
    = form.submit "Update chart", class: "form-control btn btn-fakturo btn-fakturo-action"

#chart.container.w-100.h-100

= render "import_echarts"

= render partial: "chart", locals: {option: @option}
